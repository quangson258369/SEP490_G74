<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Hcs-Healcare System</title>
    <base href="/">
    <meta name="viewport" content="width=device-width,
            initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/css/HeaderStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/UserManagerStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/Sidebar.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="background-color: #DEDEDE;">
    <div id="main">
        @await Component.InvokeAsync("Header")
        <div id="body-content">
            <div class="container-fluid">
                <div class="row">
                    @await Component.InvokeAsync("Sidebar")
                    <div class="content-right col-sm p-3 min-vh-100">
                        <div class="header-container">
                            <h2 class="header-text">Quản lí hóa đơn dịch vụ</h2>
                        </div>
                        <div class="navbar-container">
                            <nav class="navbar navbar-expand-sm  w-100">

                                <ul class="navbar-nav w-100">
                                    <li class="nav-item item-page"><a href="/InvoicePrescription"><p class=" link-room">Đơn chưa thanh toán</p></a></li>
                                    <li class="nav-item item-page"><a href="/InvoicePrescription/ListInvoicePaid"><p class=" link-room">Đơn đã thanh toán</p></a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="body-container">
                            <div id="loading" class="alert alert-info" style="display:none;">
                                Loading...
                            </div>
                            <div class="search-container">
                                <input type="text" class="form-control
                                        search-input" id="searchInput" placeholder="Nhập Tên Bệnh Nhân Hoặc Số Điện Thoại" oninput="filterTable()"/>
                                <input type="radio" name="status" value="0" onchange="filterTable()" /> Chưa Thanh Toán
                                <input type="radio" name="status" value="1" onchange="filterTable()" /> Đã Thanh Toán
                                <input type="radio" name="status" value="-1" onchange="filterTable()" checked /> Tất Cả

                                <span class="search-icon">
                                    <i class="fas fa-search"></i>
                                </span>

                            </div>
                            <table id="ITable" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Mã hóa đơn</th>
                                        <th>Tên bệnh nhân</th>
                                        <th>Số điện thoại</th>
                                        <th>Ngày tạo đơn</th>
                                        <th>Ngày thanh toán</th>
                                        <th>Trạng thái thanh toán</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    <!-- Add other rows similarly -->
                                </tbody>
                            </table>
                            @if (ViewBag.CurrentPage == 0)
                            {
                                ViewBag.CurrentPage = 1;
                            }
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    <li class="page-item"><a class="page-link" href="/InvoicePrescription/Index?page=@(ViewBag.CurrentPage >1 ? (ViewBag.CurrentPage-1) : ViewBag.CurrentPage)">Previous</a></li>
                                    @for (int i = 0; i < (ViewBag.TotalItemCount + 3 - 1) / 3; i++)
                                    {
                                        int pageNumber = i + 1;
                                        <li class="page-item @(ViewBag.CurrentPage == (i+1) ? "active" : "")"><a class="page-link" href="/InvoicePrescription/Index?page=@pageNumber">@pageNumber</a></li>
                                    }
                                    <li class="page-item"><a class="page-link" href="/InvoicePrescription/Index?page=@(ViewBag.CurrentPage <((ViewBag.TotalItemCount + 3 - 1) / 3) ? (ViewBag.CurrentPage+1) : ViewBag.CurrentPage)">Next</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
<script>
    $(document).ajaxStart(function () {
        $('#loading').show();
    });

    $(document).ajaxStop(function () {
        $('#loading').hide();
    });

    function filterTable() {
        var searchTerm = $('#searchInput').val();
        var status = $('input[name="status"]:checked').val() || '';
        var currentPage = @(ViewBag.CurrentPage);

        $.ajax({
            type: 'GET',
            url: '/InvoiceService/Search',
            data: { term: searchTerm,status: status,page: currentPage },
            success: function (response) {
                $('#ITable tbody').html(response);
                var rowCount = $('#ITable tbody tr').length;
                if (rowCount < 4) {
                    $('.pagination').hide();
                } else {
                    $('.pagination').show();
                }
            },
            error: function (error) {
                console.log('Ajax request failed: ' + error);
            }
        });
    }
</script>
<script type="text/javascript" src="~/js/HeaderScript.js"></script>
<script type="text/javascript" async src="~/js/Sidebar.js?v=1.0" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/script.js"></script>
</html>