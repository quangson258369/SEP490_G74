@{
}
@model IEnumerable<HcsBE.DTO.InvoiceDTO>

@foreach (var ins in Model)
{
    <tr>
        <td>@ins.InvoiceId</td>
        <td>@ins.Patient?.Contacts?.Name</td>
        <td>@ins.Patient?.Contacts?.Phone</td>
        <td>@ins.CreateDate</td>
        <td>@(ins.PaymentDate == DateTime.ParseExact("1900-01-01", "yyyy-MM-dd", null)?"Chưa Thanh Toán":ins.PaymentDate)</td>
        <td>@(ins.Status == true ? "Đã Thanh Toán" : "Chưa Thanh Toán")</td>
        <td>@ins.PaymentMethod</td>
        <td><button><a class="btn text-dark" href="/InvoiceService/Detail?id=@ins.InvoiceId">Chi Tiết</a></button></td>
    </tr>
}