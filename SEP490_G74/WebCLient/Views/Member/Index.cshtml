@model HcsBE.DTO.MemberPagination
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Hcs-Healcare System</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/css/HeaderStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/UserManagerStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/Sidebar.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="background-color: #DEDEDE;">
    <div id="main">
        <div id="header">
        </div>
        <div id="body-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="sidebar"></div>
                    <div class="content-right col-sm p-3 min-vh-100">
                        <div class="header-container">
                            <h2 class="header-text">Quản lí nhân sự</h2>
                        </div>
                        <div class="addNewUser">
                            <a href="/Member/AddMember" class="custom-button">
                                <span class="plus">+</span>
                                Thêm nhân viên
                            </a>

                        </div>
                        <div class="body-container">

                            <div class="search-container">
                                <input type="text" class="form-control
                                        search-input" placeholder="Search
                                        anything...">
                                <span class="search-icon">
                                    <i class="fas fa-search"></i>
                                </span>

                            </div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Họ và tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Vị trí công việc</th>
                                        <th>Địa chỉ</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Members)
                                    {
                                    <tr>
                                        <td>@item.Name</td>
                                                <td>@item.Gmail</td>
                                            <td>@item.Phone</td>
                                            <td>@item.RoleName</td>
                                            <td>@item.Address</td>                                          
                                        <td>
                                            <button>
                                                <a class="btn text-dark"
                                                   href="/Member/ViewDetailMember?id=@item.MemberId">chi tiết</a>
                                            </button>
                                        </td>
                                    </tr>
                                    }
                                    <!-- Add other rows similarly -->
                                </tbody>
                            </table>
                            @if (ViewBag.CurrentPage == 0)
                            {
                                ViewBag.CurrentPage = 1;
                            }
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    <li class="page-item"><a class="page-link" href="/Member/Index?page=@(ViewBag.CurrentPage >1 ? (ViewBag.CurrentPage-1) : ViewBag.CurrentPage)">Previous</a></li>
                                    @for (int i = 0; i < (Model.TotalItemCount + Model.PageNumber - 1) / Model.PageNumber; i++)
                                    {

                                        int pageNumber = i + 1;
                                        <li class="page-item @(ViewBag.CurrentPage == (i+1) ? "active" : "")"><a class="page-link" href="/Member/Index?page=@pageNumber">@pageNumber</a></li>
                                    }
                                    <li class="page-item"><a class="page-link" href="/Member/Index?page=@(ViewBag.CurrentPage <((Model.TotalItemCount + Model.PageNumber - 1) / Model.PageNumber) ? (ViewBag.CurrentPage+1) : ViewBag.CurrentPage)">Next</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
<script type="text/javascript" src="~/js/HeaderScript.js"></script>
<script type="text/javascript" src="~/js/script.js"></script>
<script type="text/javascript" src="~/js/Sidebar.js"></script>
</html>

