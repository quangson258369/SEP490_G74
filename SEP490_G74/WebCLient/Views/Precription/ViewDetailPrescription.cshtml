@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Hcs-Healcare System</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/css/HeaderStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/PrecriptionStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/Sidebar.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/1d6b4c4b00.js" crossorigin="anonymous"></script>
</head>

<body>
    <div id="main">
        @await Component.InvokeAsync("Header")
        <div id="body-content">
            <div class="container-fluid">
                <div class="row">
                    @await Component.InvokeAsync("Sidebar")
                    <div class="col-sm p-3 min-vh-100">

                        <h2 class="body-content-header">Hồ sơ bệnh nhân</h2>
                        <form class=" form-profile" method="post" action="/precription/AddInformationSuppliesToPrecription">
                            <div class="col-md-12 form-group">
                                <div class="line1 row">
                                    <div class="col-md-2 form-group">
                                        <label class="invoice-code">Mã hồ sơ</label>
                                        <input type="text" class="invoice-code form-control" name="PrescriptionId"
                                               value="@ViewBag.DetailContactPatient.PrescriptionId"
                                               readonly />
                                    </div>
                                    <div class="col-md-2 form-group">
                                        <label class="patient-code">Mã bệnh nhân</label>
                                        <input type="text" class="patient-code form-control" name="PatientId"
                                               value="@ViewBag.DetailContactPatient.PatientId"
                                               readonly />
                                    </div>

                                    <div class="col-md-3 form-group">
                                        <label class="fullname">Họ và tên</label>
                                        <input type="text" class="fullname form-control" name="Name"
                                               value="@ViewBag.DetailContactPatient.Name"
                                               readonly/>

                                    </div>
                                    <div class="col-md-2 form-group">
                                        <label class="dob">Ngày sinh</label>
                                        <input type="text" class="dob form-control" name="Dob"
                                               value="@ViewBag.DetailContactPatient.Dob.ToString(" yyyy-MM-dd")"
                                               readonly/>

                                    </div>
                                    <div class="col-md-3 form-group">
                                        <label class="title-gender">Giới tính</label>
                                        <div class="gender">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender" id="male"
                                                       @(ViewBag.DetailContactPatient.Gender==true ? "checked" : null)
                                                       value="true">
                                                <label class="form-check-label" for="male">Male</label>
                                            </div>

                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender" id="female"
                                                       @(ViewBag.DetailContactPatient.Gender==false ? "checked" : null)
                                                       value="false">
                                                <label class="form-check-label" for="female">Female</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="line2 row">
                                    <div class="col-md-9 form-group">
                                        <label class="address">Địa chỉ</label>
                                        <input type="text" class="address form-control" name="Address"
                                               value="@ViewBag.DetailContactPatient.Address"
                                               readonly/>
                                    </div>
                                    <div class="row-cols-md-3 form-group">
                                        <label class="phone">Số điện thoại</label>
                                        <input type="text" class="phone form-control" name="Phone"
                                               value="@ViewBag.DetailContactPatient.Phone"
                                               readonly/>
                                    </div>

                                </div>
                                <div class="col-md-12 line3 row">                                   
                                    <div class="col-md-12 form-group ">
                                        <label class="title-email">Vât tư của đơn thuốc</label>
                                        <div class="card">
                                            <div class="card-body table-responsive">
                                                <div class="scrollable-tbody">
                                                    <table id="Selected-supplies" class="table table-bordered table-body Selected-supplies-table">
                                                        <thead>
                                                            <tr>
                                                                <th>Tên vật tư</th>
                                                                <th>Số lượng</th>
                                                                <th>Loại Vật tư</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach(var item in Model)
                                                            {
                                                                <tr>
                                                                    <td>@item.SuppliesName</td>
                                                                    <td>@item.Quantity</td>
                                                                    <td>@item.SuppliesTypeName</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                    <input hidden id="jsond" name="jsonData" />
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                                <div class="col-md-12 line4 row"> 
                                    <div class="col-md-6 form-group">
                                        <label class="date-create">Ghi chú</label>
                                        <textarea type="text" class="note form-control" name="diagnose" readonly>@Model.FirstOrDefault().Diagnose</textarea>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label class="date-create">Ngày kê đơn</label>
                                        <input type="date" class="date-create form-control" name="creatDate" value="@Model.FirstOrDefault().CreateDate.ToString("yyyy-MM-dd")" readonly />
                                    </div>
                                </div>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
<script type="text/javascript" async src="~/js/Sidebar.js?v=1.0" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/HeaderScript.js"></script>
<script type="text/javascript" src="~/js/SuppliesScript.js" asp-append-version="true"></script>
</html>