<script>

    function LoadData() {
        var suppliesTypeId = $("#suppliesType").val();
        $.ajax({
            url: "https://localhost:7249/api/Supplies/ListSuppliesByType?typeId=" + suppliesTypeId,
            type: "get",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result, status, xhr) {
                console.log(result);
                var tbody = $("#supppliesTable tbody");
                tbody.empty();

                $.each(result, function (index, value) {
                    var newRow = $("<tr>");
                    newRow.append($("<td>").html(value["sName"]));
                    newRow.append($("<td>").html($(`<button type="button" onclick="addSupplies('${value["sName"]}', '${value["sId"]}')">Thêm</button>`)));
                    tbody.append(newRow);
                });
                //sendData();
            },
            error: function (xhr, status, error) {
                console.log(xhr);
            }
        });
    }
