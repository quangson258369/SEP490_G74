    //        },
    //        error: function (error) {
    //            console.error('Error sending data:', error);
    //        }
    //    });
    //}
    function sendData() {
        var rows = document.querySelectorAll('#Selected-supplies tbody tr');
        var dataToSend = [];

        rows.forEach(function (row) {
            var hiddenInputValue = row.querySelector('input[name="IdOfSupplies"]').value;
            var numberInputValue = row.querySelector('input[name="UnitInStock"]').value;

            dataToSend.push({
                idOfSupplies: hiddenInputValue,
                unitInStock: numberInputValue
            });
        });

        fetch('/precription/AddInformationPrecription', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(dataToSend)
        })
            .then(response => {
                if (response.ok) {
                    console.log('Data sent successfully');
                } else {
                    console.error('Failed to send data');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }

</script>
