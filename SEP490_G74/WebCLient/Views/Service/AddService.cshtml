@model IEnumerable<DataAccess.Entity.ServiceType>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Hcs-Healcare System</title>
    <base href="/">
    <meta name="viewport" content="width=device-width,
            initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/css/HeaderStyle.css">

    <link rel="stylesheet" type="text/css" href="~/css/ProfileStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/Sidebar.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/1d6b4c4b00.js" crossorigin="anonymous"></script>
</head>

<body style="background-color: #DEDEDE;">
    <div id="main">
        @await Component.InvokeAsync("Header")
        <div>
            <div class="container-fluid">
                <div class="row">
                    @await Component.InvokeAsync("Sidebar")
                    <div class="content-right col-sm p-3
                            min-vh-100">
                        <div class="header-container">
                            <h2 class="header-text">Quản lí dịch vụ</h2>
                        </div>
                        <h4 class="body-content-header">Thêm dịch vụ</h4>
                        <form class=" form-profile" action="Service/AddInformationService" method="post" enctype="multipart/form-data">
                            <div class="col-md-12 form-group">
                                <div class="col-md-12 content-left">
                                    <div class="line1 row">
                                        <div class="col-md-5
                                                form-group">
                                            <label class="title-fullname">
                                                Tên dịch vụ
                                            </label>
                                            <input type="text"
                                                   class="fullname
                                                    form-control"
                                                   name="ServiceName" />
                                        </div>
                                        <div class="col-md-4
                                                form-group">
                                            <label class="title-fullname">
                                                Loại dịch vụ
                                            </label>
                                            <select class="role
                                                    form-control" name="ServiceTypeId" id="roleSelection">
                                                @foreach (var item in Model)
                                                {
                                                    <option value="@item.ServiceTypeId">@item.ServiceTypeName</option>
                                                }
                                            </select>
                                        </div>

                                        <div class="col-md-3
                                                form-group">
                                            <label class="title-fullname">
                                                Giá dịch vụ
                                            </label>
                                            <input type="text"
                                                   class="dob
                                                    form-control"
                                                   name="Price" />
                                            </div>
                                        </div>
                                        <div class="line2 row">
                                    <div class="col-md-12
                                                content-right">
                                            <div class="text-right">
                                            <button class="btn-change-profile">
                                                Thêm
                                            dịch vụ
                                            </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                                    
                                  
                            </div>
                        </form>


                    </div>
                </div>
            </div>

        </div>
    </div>
    <script type="text/javascript" src="~/js/HeaderScript.js"></script>
    <script type="text/javascript" async src="~/js/Sidebar.js?v=1.0" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/script.js" asp-append-version="true"></script>
</body>

</html>


