    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="background-color: #DEDEDE;">
    <div id="main">
        <div id="header">
        </div>
        <div id="body-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="sidebar"></div>
                    <div class="content-right col-sm p-3 min-vh-100">
                        <div class="header-container">
                            <h2 class="header-text">Hồ Sơ Bệnh Án</h2>
                        </div> 
                        
                        <div class="addNewUser">
                        </div>

                        <div class="body-container">
                            <div id="loading" class="alert alert-info" style="display:none;">
                                Loading...
                            </div>
                            <div class="search-container">
                                <input type="text" class="form-control
                                        search-input" id="searchInput" placeholder="Nhập Tên Bệnh Nhân hoặc Số Điện Thoại" oninput="filterTable()"/>
                                <span class="search-icon">
                                    <i class="fas fa-search"></i>
                                </span>

                            </div>
                            <table id="MRTable" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Mã Hồ Sơ</th>
                                        <th>Họ và tên</th>
                                        <th>Số Điện Thoại</th>
                                        <th>Ngày Khám</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*@foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MedicalRecordId</td>
                                            <td>@item.PatientName</td>
                                            <td>@item.PatientPhone</td>
                                            <td>@item.MedicalRecordDate</td>
                                            <td>Chưa khám</td>

                                            <td><button><a class="btn text-dark" href="">Danh Sách Kết Quả</a></button></td>
                                            <td><button><a class="btn text-dark" href="/MedicalRecord/AddReExam?examid=@item.ExamCode">Tái Khám</a></button></td>
                                            <td><button><a class="btn text-dark" href="/MedicalRecord/MedicalRecordDetail?id=@item.MedicalRecordId">Chi Tiết</a></button></td>
                                        </tr>
                                    }*@
                                    @Html.Partial("_MedicalRecordTablePartial", Model)
                                    <!-- Add other rows similarly -->
                                </tbody>
                            </table>
                            @if (ViewBag.CurrentPage == 0)
                            {
                                ViewBag.CurrentPage = 1;
                            }
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    <li class="page-item"><a class="page-link" href="/MedicalRecord/Index?page=@(ViewBag.CurrentPage >1 ? (ViewBag.CurrentPage-1) : ViewBag.CurrentPage)">Previous</a></li>
                                    @for (int i = 0; i < (ViewBag.TotalItemCount + 4 - 1) / 4; i++)
                                    {

                                        int pageNumber = i + 1;
                                        <li class="page-item @(ViewBag.CurrentPage == (i+1) ? "active" : "")"><a class="page-link" href="/MedicalRecord/Index?page=@pageNumber">@pageNumber</a></li>
                                    }
                                    <li class="page-item"><a class="page-link" href="/MedicalRecord/Index?page=@(ViewBag.CurrentPage <((ViewBag.TotalItemCount + 4 - 1) / 4) ? (ViewBag.CurrentPage+1) : ViewBag.CurrentPage)">Next</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="../../js/HeaderScript.js"></script>
    <script src="../../js/Sidebar.js"></script>
    <script>
        $(document).ajaxStart(function () {
            $('#loading').show();
        });

        $(document).ajaxStop(function () {
            $('#loading').hide();
        });

        function filterTable() {
            var searchTerm = $('#searchInput').val();
            var currentPage = @(ViewBag.CurrentPage);

            $.ajax({
                type: 'GET',
                url: '/MedicalRecord/Search',
                data: { term: searchTerm, page: currentPage },
                success: function (response) {
                    $('#MRTable tbody').html(response);
                    var rowCount = $('#MRTable tbody tr').length;
                    if (rowCount < 4) {
                        $('.pagination').hide();
                    } else {
                        $('.pagination').show();
                    }
                },
                error: function (error) {
                    console.log('Ajax request failed: ' + error);
                }
            });
        }
    </script>
</body>

</html>