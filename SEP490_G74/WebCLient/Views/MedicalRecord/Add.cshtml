<script>
    let services = [];

    var selectedDoctorId = 0;

    function HandleSelectChange(selectElement) {
        var doctorId = $(selectElement).val();
        selectedDoctorId = doctorId !== undefined ? doctorId : '';
        console.log("data get in GetData:" + selectedDoctorId);
        return selectedDoctorId;
    }

    function addService(id, name, price) {

        let service = {
            sid: id,
            name: name,
            price: price,
            doctorid: selectedDoctorId
        };


        const index = services.findIndex(service => {
            return service.sid === id && service.name === name && service.price === price;
        });
        if (index <= -1) {
            addToTable(service);
            services.push(service);
            console.log(services);
        }

    }
    function addToTable(service) {
        let id = service.sid;
        let name = service.name;
        let price = service.price;
        // Create table row html
        let row = `
        <tr>
          <td>${name}</td>
          <td>${price}</td>
          <td><button type="button" onclick="RemoveService('${id}','${name}','${price}')">Xóa</button></td>
        </tr>
      `;

        // Add row to table
        $('.selected-service-table tbody').append(row);
    }

    function RemoveService(id, name, price) {

        // Find index of object in services array
        const index = services.findIndex(service => {
            return service.sid === id && service.name === name && service.price === price;

        });

        if (index > -1) {

            // Remove from services array
            services.splice(index, 1);

            const table = document.getElementById("selected-service");
            // Find and remove table row
            if (table) {
                const rows = table.querySelectorAll('tr');

                rows.forEach(row => {
                    if (row.textContent.includes(name)) {
                        row.remove();
                    }
                })
            }


        }

    }

    function populateSelect() {
        document.getElementById("jsonData").value = JSON.stringify(services);
    }

    function filterTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toLowerCase();
        table = document.getElementById("serviceTable");
        tr = table.getElementsByTagName("tr");

        // Loop through all table rows, and hide those that don't match the search query
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toLowerCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

   function LoadData() {
    var serviceTypeId = $("#serviceType").val();
    console.log(serviceTypeId);

    $.ajax({
        url: "https://localhost:7249/api/Service/SearchService?typeId=" + serviceTypeId,
        type: "get",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (result, status, xhr) {
            console.log(result);
            var tbody = $("#serviceTable tbody");
            tbody.empty(); // Clear existing rows before appending new ones

            $.each(result, function (index, value) {
                var newRow = $("<tr>");
                newRow.append($("<td>").html(value["serviceName"]));
                    var selectElement = $("<select class=\"doctor\" onchange=\"HandleSelectChange(this)\" > "); // Use class instead of id
                newRow.append($("<td>").append(selectElement));
                LoadDoctor(selectElement, serviceTypeId);
                    
                    newRow.append($("<td>").html($(`<button type="button" onclick="addService('${value["serviceId"]}', '${value["serviceName"]}', '${value["price"]}')">Thêm</button>`)));
                tbody.append(newRow);
            });
        },
        error: function (xhr, status, error) {
            console.log(xhr);
        }
    });
    } 



function LoadDoctor(selectElement, serviceTypeId) {
    var doctorId; // Variable to store the selected doctorId

    $.ajax({
        url: "https://localhost:7249/api/MedicalRecord/ListDoctorByServiceType?serviceTypeId=" + serviceTypeId,
        type: "get",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        async: false, // Synchronous request to wait for the options to be loaded
        success: function (result, status, xhr) {
            console.log(result);
            selectElement.empty(); // Clear existing options before appending new ones
            $.each(result, function (index, value) {
                selectElement.append($('<option value=' + value["doctorId"] + '>' + value["contact"]["name"] + '</option>'));
            });
            doctorId = selectElement.val(); // Get the selected doctorId
        },
        error: function (xhr, status, error) {
            console.log(xhr);
        }
    });

    return doctorId; // Return the selected doctorId
}
    $('#submitBtn').on('click', () => {

        // Add array as hidden input
        let input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'selectedServices';
        input.value = JSON.stringify(services);

        document.getElementById('serviceForm').appendChild(input);

        // Submit form
        document.getElementById('serviceForm').submit();

    });
</script>
