                                    <div class="col-md-3 form-group">
                                        <label class="date-create">Lí do khám</label>
                                        <textarea type="text" class="ReasonExamination form-control" name="address"></textarea>
                                    </div>
                                    <div class="col-md-5 form-group">
                                        <label class="date-create">Dịch vụ</label>
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="row">
                                                    
                                                    <select id="serviceType" onchange="saveAndSendToControll(this.value, getInputValue())" class="col-md-4 ml-3" name="ServiceType">
                                                        <option value="0">Chọn phòng khám</option>
