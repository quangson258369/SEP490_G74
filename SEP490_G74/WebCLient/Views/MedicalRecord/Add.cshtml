</body>
<script>
    var savedServiceType = 0;
    var savedSearchValue = "";

    function getSelectValue() {
        var selectElement = document.getElementById('serviceType');
        return selectElement.options[selectElement.selectedIndex].value;
    }

    function getInputValue() {
        var inputValue = document.getElementById('searchService').value;
        return encodeURIComponent(inputValue);
    }

    function filterTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toLowerCase();
        table = document.getElementById("serviceTable");
        tr = table.getElementsByTagName("tr");

        // Loop through all table rows, and hide those that don't match the search query
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toLowerCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
 </script>
